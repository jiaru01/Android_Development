<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PublicBuyPoolDisplayPageActivity">


    <include
        android:id="@+id/buyPool_toolbar_title"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="616dp"
        android:contentDescription="@string/contendDiscriptionBackgruo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="588dp"
        android:contentDescription="@string/contendDiscriptionBackgruo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="140dp"
        android:contentDescription="@string/contendDiscriptionBackgruo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circletransparant" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="164dp"
        android:contentDescription="@string/contendDiscriptionBackgruo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circletransparant" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBuyPoolPage"
        android:layout_width="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.059"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:drawableRight="@drawable/ic_add_shopping_cart_black_24dp"
        android:drawablePadding="8dp"
        android:text="Welcome to BuyPool !!"
        android:textColor="@color/Green"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buyPool_toolbar_title" />


    <ImageView
        android:id="@+id/wheather_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/wheather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Dublin"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/wheather_image"
        app:layout_constraintTop_toTopOf="@+id/wheather_image" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="15Â°C"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/desc"
        app:layout_constraintStart_toEndOf="@+id/desc" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="italic"

        app:layout_constraintEnd_toEndOf="@+id/town"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/town"
        app:layout_constraintTop_toBottomOf="@+id/town" />


</androidx.constraintlayout.widget.ConstraintLayout>